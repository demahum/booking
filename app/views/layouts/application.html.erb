<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Booking" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <script>
      // Global helper function to handle locale-specific page initialization
      window.reinitializePageAfterLocaleChange = function() {
        console.log('Locale change detected, reinitializing page components');
        
        // Dispatch a custom event that page scripts can listen for
        document.dispatchEvent(new CustomEvent('localeChanged', {
          detail: { locale: '<%= I18n.locale.to_s %>' }
        }));
        
        // If a global initialization function exists, call it
        if (typeof window.initializeBookingUI === 'function') {
          console.log('Calling initializeBookingUI');
          window.initializeBookingUI();
        }
      };
    </script>
  </head>

  <body>
    <div class="header-controls">
      <div class="language-picker">
        <% if I18n.locale == :en %>
          <%= form_with url: change_locale_path, method: :post, class: "inline-form", data: { turbo: false } do |f| %>
            <%= f.hidden_field :new_locale, value: "bs" %>
            <%= f.hidden_field :return_to, value: request.fullpath %>
            <%= f.button t('language.picker.bosnian'), 
                class: "language-button", 
                title: "#{t('language.picker.switch_to')} #{t('language.picker.bosnian')}" %>
          <% end %>
        <% else %>
          <%= form_with url: change_locale_path, method: :post, class: "inline-form", data: { turbo: false } do |f| %>
            <%= f.hidden_field :new_locale, value: "en" %>
            <%= f.hidden_field :return_to, value: request.fullpath %>
            <%= f.button t('language.picker.english'), 
                class: "language-button", 
                title: "#{t('language.picker.switch_to')} #{t('language.picker.english')}" %>
          <% end %>
        <% end %>
      </div>
      
      <% if authenticated? %>
        <div class="auth-controls">
          <%= link_to t('auth.logout'), logout_path, class: "logout-button", data: { turbo: false } %>
        </div>
      <% end %>
    </div>
    
    <% if notice %>
      <div class="flash-notice"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="flash-alert"><%= alert %></div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
